{
  "rules": {
    "indent": [
      2,
      4
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": [0]
  },
  "env": {
    "browser": true,
    "mocha": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "assert": true,
    "sinon": true
  },
  "extends": "eslint:recommended"
}
