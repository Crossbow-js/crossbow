{
  "config": {
    "desc": "Path to your input file.",
    "type": "array",
    "alias": "c",
    "default": []
  },
  "reporters": {
    "desc": "Paths to modules that contain a reporter",
    "type": "array",
    "alias": "reporter",
    "default": []
  },
  "cwd": {
    "desc": "Current Working directory",
    "type": "string"
  },
  "cbfile": {
    "desc": "Path to your cbfile.js (gulp mode)",
    "type": "string",
    "default": ""
  },
  "debug": {
    "desc": "Enable full error stacks in reports",
    "type": "boolean"
  },
  "dump": {
    "desc": "Dump task/sequence/config info to files in cwd",
    "type": "boolean",
    "default": false
  },
  "e": {
    "desc": "Global Environment vars (eg: NAME=docker)",
    "type": "array"
  },
  "verbose": {
    "desc": "Increase Verbosity level of output",
    "type": "boolean",
    "alias": "v",
    "count": true,
    "default": false
  },
  "envPrefix": {
    "desc": "Prefix to use before any auto-generated ENV vars",
    "type": "string"
  }
}
