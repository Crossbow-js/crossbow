{
  "cbfile": {
    "desc": "Path to your cbfile.js (gulp mode)",
    "type": "string"
  },
  "debug": {
    "desc": "Enable full error stacks in reports",
    "type": "boolean"
  },
  "dump": {
    "desc": "Dump task/sequence/config info to files in cwd",
    "type": "boolean"
  },
  "e": {
    "desc": "Global Environment vars (eg: NAME=docker)",
    "type": "array"
  },
  "verbose": {
    "desc": "Increase Verbosity level of output",
    "alias": ["v"],
    "type": "count"
  },
  "envPrefix": {
    "desc": "Prefix to use before any auto-generated ENV vars",
    "type": "string"
  },
  "bin": {
    "desc": "Directories to scan for executables",
    "type": "array"
  }
}
